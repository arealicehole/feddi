# Discord bot configuration
DISCORD_TOKEN=your_bot_token_here
COMMAND_PREFIX=!
DATABASE_PATH=data/database.db
LOG_LEVEL=INFO
ADMIN_USER_IDS=comma_separated_admin_user_ids

# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mydatabase
DB_USER=user
DB_PASSWORD=password

# AI Vision integration
XAI_API_KEY=your_xai_api_key_here

# Backup configuration
BACKUP_CHANNEL_ID=discord_channel_id_for_backups
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
REPORTS_DIR=data/reports
BACKUP_CLOUD_PROVIDER=discord  # Options: discord, google, onedrive
BACKUP_COMPRESSION_LEVEL=6  # 1-9, higher is more compression but slower
BACKUP_VERIFY_INTEGRITY=true  # Whether to verify backup integrity
BACKUP_ROTATION_SCHEME=gfs  # Options: gfs (grandfather-father-son), simple
BACKUP_ENCRYPTION_KEY=your_encryption_key_here  # Optional, for encrypted backups

# System monitoring
HEALTH_CHECK_INTERVAL_MINUTES=15
ERROR_THRESHOLD=10  # Number of errors before alerting
ADMIN_NOTIFICATION_CHANNEL_ID=discord_channel_id_for_admin_notifications

# Optional integrations
SENTRY_DSN=your_sentry_dsn_here  # For error tracking
GOOGLE_API_KEY=your_google_api_key_here  # For Google Drive integration